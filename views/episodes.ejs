<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About episodes</title>
    <link rel="stylesheet" href="/app.css" type="text/css">
</head>

<body>
    <nav class="nav-bar">
        <a class="go-home-link" href="http://localhost:3000/tv-shows">
            <h1><span class="about">About</span>TV-SHOWS</h1>
        </a>
    </nav>

    <div>
        <% const episodes = seasonData %>
        <% for (let e of episodes) { %>
            <div class="episode-container">
                 <div class="img-container">
                    <% if (e.image) { %>
                        <img class="episode-image" src="<%=e.image.medium%>" alt="">
                    <% } %>
                </div>
                <div id="info-container">
                    <h3>Episode <%= e.number %> - <%= e.name %> </h3>
                    <div class="chan-date-box">
                    <h4>Airdate: <%= e.airdate %> </h4>
                    </div>
                    <p>Summary: <%- e.summary %></p>
                </div> 
            </div>
        <% } %> 
    </div>
    


</body>